// Prisma schema for LaTeX Web App

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  passwordHash String         @map("password_hash")
  name         String
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  
  projects      Project[]
  collaborations Collaborator[]

  @@map("users")
}

model Project {
  id          String   @id @default(uuid())
  ownerId     String   @map("owner_id")
  name        String
  description String?
  mainFile    String   @default("main.tex") @map("main_file")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  owner         User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  files         File[]
  folders       Folder[]
  collaborators Collaborator[]

  @@map("projects")
}

model Folder {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  path      String   // Full path e.g., "images" or "chapters/intro"
  name      String   // Folder name (last segment)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, path])
  @@map("folders")
}

model File {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  path      String
  name      String
  content   String   @default("")
  mimeType  String   @default("text/x-tex") @map("mime_type")
  size      BigInt   @default(0)
  yjsState  Bytes?   @map("yjs_state")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, path])
  @@map("files")
}

model Collaborator {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  role      String   @default("editor") // "viewer" | "editor" | "owner"
  createdAt DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("collaborators")
}
